\defbeamertemplate*{title page}{cgs}[1][]
{
	\center
	\hfill\logo\par
	\vspace{-0.66cm}
  \usebeamerfont{title}\inserttitle\par
  \medskip
	\usebeamerfont{subtitle}\usebeamercolor[fg]{subtitle}
	\insertsubtitle\par
  \bigskip
	\inserttitlegraphic\par
  \bigskip
	\usebeamerfont{author}\usebeamercolor[fg]{title}
	\insertauthor\par
  \smallskip
	\usebeamerfont{institute}\usebeamercolor[fg]{subtitle}
	\renewcommand{\dateseparator}{.}
	\insertinstitute \quad \usebeamerfont{date}\insertdate \quad \ddmmyyyydate\today\par
}

\defbeamertemplate*{frametitle}{cgs}
{
	\begin{beamercolorbox}[left, leftskip=0.5cm, ht=8mm, dp=1mm, wd=\paperwidth]{frametitle}
		\usebeamerfont{frametitle}\insertframetitle{}
	\end{beamercolorbox}
	\nointerlineskip
	\vspace{-8mm}
	\begin{beamercolorbox}[right, rightskip=0.5cm, ht=8mm, dp=1mm, wd=\paperwidth]{}
		\logo
	\end{beamercolorbox}
}

\defbeamertemplate*{footline}{cgs}
{
\hbox{%
	\begin{beamercolorbox}[wd=\paperwidth, ht=0.5mm, dp=.2mm]{topfootline}%
	\end{beamercolorbox}%
}
\hbox{%
	\begin{beamercolorbox}[left, leftskip=0.5cm, rightskip=0.5cm, dp=1mm, wd=\paperwidth]{footline}%
		\insertframenumber \quad Chapter \chapternumber, \insertsubtitle~\ifx\insertsectionhead\empty\else|~\insertsectionhead\fi
		\hfill
		\renewcommand{\dateseparator}{.}
		\insertshorttitle \quad \insertshortdate \quad \ddmmyyyydate\today\par
	\end{beamercolorbox}%
}
}

